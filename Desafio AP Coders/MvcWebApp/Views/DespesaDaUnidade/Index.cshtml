@model mvc_web_app.Models.DespesasDasUnidadesViewModel
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<form asp-controller="DespesaDaUnidade" asp-action="Index" method="get">
    <p>

        Vencimento: <input type="date" asp-for="vencimento"/>

        Unidade: <input type="text" asp-for="unidade" />
        <input type="submit" value="Filtrar" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DespesasDasUnidades[0].descricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DespesasDasUnidades[0].tipoDespesa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DespesasDasUnidades[0].valor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DespesasDasUnidades[0].vencimento_fatura)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DespesasDasUnidades[0].statusPagamento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DespesasDasUnidades[0].unidadeId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.DespesasDasUnidades)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.descricao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.tipoDespesa)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.valor)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.vencimento_fatura)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.statusPagamento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.unidadeId)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>